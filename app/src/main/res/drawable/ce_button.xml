<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B3000000" />

        </shape>
    </item>
    <item
        android:left="15dp"
        android:right="15dp"
        android:bottom="15dp"
        android:top="15dp">
        <shape>
            <solid
                android:color="#000000" />
            <stroke
                android:width="0.1dp"
                android:color="#c6c6c6" />


        </shape>
    </item>

</selector>